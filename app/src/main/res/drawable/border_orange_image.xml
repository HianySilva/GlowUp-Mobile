<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borda laranja (2dp) - mesma cor do ícone de voltar (#eb7d46) -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#eb7d46"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Espaço interno para a imagem -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</layer-list>