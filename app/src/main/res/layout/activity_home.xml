<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com Logo e Nome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="79dp"
                android:layout_height="73dp"
                android:contentDescription="Logo GlowUp"
                android:src="@drawable/ic_glowup_logo" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="GlowUp"
                android:textColor="#eb7d46"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnBuscar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_search"
                android:tint="#eb7d46"
                android:contentDescription="Buscar" />
        </LinearLayout>

        <!-- Container para Banner e Botão -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Banner Principal -->

            <!-- Botão na Lateral Direita com arredondamento direto -->

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="Banner de produtos GlowUp"
                android:scaleType="centerCrop"
                android:src="@drawable/pngtree_rose_flower_plant_leaves_cartoon_cosmetic_makeup_advertising_background_picture_image_2424145" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnProdutos"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imgBanner"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="173dp"
                android:layout_marginBottom="136dp"
                android:backgroundTint="#eb7d46"
                android:elevation="8dp"
                android:paddingHorizontal="24dp"
                android:stateListAnimator="@null"
                android:text="VER PRODUTOS"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:cornerRadius="20dp" />
        </RelativeLayout>

        <!-- Grid de Categorias com bordas implementadas diretamente -->
        <GridLayout
            android:id="@+id/gridCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- blush-->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_blush"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Blush"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>
            <!-- bronzer-->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_bronzer"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Bronzer"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- Eyebrow-->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:src="@drawable/ic_eyebrow"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Eyebrow"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>
            <!-- eyeliner -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_eyeliner"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Eyeliner"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>


            <!-- eyeshadow -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_eyeshadow"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Eyeshadow"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- foundation -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_foundation"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Foundation"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- Lip liner -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_lipliner"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Lip liner"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- lipstick -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_lipstick"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Lipstick"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- Mascara -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_mascara"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Mascara"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- Nail polish-->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="#eb7d46"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_nailpolish"
                        app:tint="#eb7d46" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Nail polish"
                        android:textColor="#eb7d46"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>